# Backend Environment Variables
# Copy this file to .env and update with your actual values

# Application Settings
API_HOST=localhost
API_PORT=8000
ENV=development
LOG_LEVEL=info

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Database Configuration
DATABASE_URL=sqlite:///./ai_english_tutor.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/ai_english_tutor
SQL_DEBUG=false

# Google Gemini Configuration (for advanced AI features)
GEMINI_API_KEY=AIzaSyAc18MNGAdVwcV7v_zyNeOxax-n8544x7Y
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=500

# Google Cloud Speech Services
# Download service account key from Google Cloud Console
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json

# Google Cloud Project Settings
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_REGION=us-central1

# Speech Recognition Settings
SPEECH_LANGUAGE_CODE=en-US
SPEECH_ALTERNATIVE_LANGUAGES=te-IN,en-IN
SPEECH_PROFANITY_FILTER=true
SPEECH_ENABLE_WORD_CONFIDENCE=true

# Text-to-Speech Settings
TTS_DEFAULT_LANGUAGE=en-US
TTS_VOICE_NAME=en-US-Neural2-F
TTS_SPEAKING_RATE=0.85
TTS_PITCH=0.0
TTS_VOLUME_GAIN_DB=0.0

# Telugu Text-to-Speech Settings
TTS_TELUGU_LANGUAGE=te-IN
TTS_TELUGU_VOICE_NAME=te-IN-Standard-A

# Learning Algorithm Settings
DEFAULT_STUDENT_LEVEL=beginner
DAILY_VOCABULARY_COUNT=5
WEEKLY_SENTENCE_GOAL=50
MAX_CORRECTION_EXAMPLES=3
MAX_VERB_FORMS_TO_SHOW=5

# Progress Tracking
STREAK_CALCULATION_TIMEZONE=Asia/Kolkata
LEARNING_INSIGHTS_REFRESH_HOURS=24
PROGRESS_SUMMARY_DAYS=7

# Security Settings (for future authentication)
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_SPEECH_REQUESTS_PER_HOUR=100

# File Upload Settings
MAX_AUDIO_FILE_SIZE_MB=10
ALLOWED_AUDIO_FORMATS=webm,wav,mp3,m4a
AUDIO_PROCESSING_TIMEOUT_SECONDS=30

# Caching (for future Redis integration)
REDIS_URL=redis://localhost:6379
CACHE_CONVERSATION_CONTEXT_TTL=3600
CACHE_VOCABULARY_TTL=86400

# Monitoring and Analytics
ENABLE_ANALYTICS=true
ANALYTICS_BATCH_SIZE=100
ERROR_REPORTING_ENABLED=true

# Feature Flags
ENABLE_VOICE_FEATURES=true
ENABLE_ADVANCED_CORRECTIONS=true
ENABLE_PERSONALIZED_LESSONS=true
ENABLE_PROGRESS_ANALYTICS=true
ENABLE_TELUGU_EXPLANATIONS=true

# External API Settings
TRANSLATION_SERVICE_TIMEOUT=10
SPEECH_SERVICE_TIMEOUT=30
AI_SERVICE_TIMEOUT=20

# Development Settings
RELOAD_ON_CHANGES=true
DEBUG_MODE=false
ENABLE_CORS_ALL_ORIGINS=false

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/ai_tutor.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Performance Settings
WORKER_TIMEOUT=120
MAX_CONCURRENT_REQUESTS=100
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30

# Content Settings
MAX_MESSAGE_LENGTH=500
MIN_MESSAGE_LENGTH=1
MAX_LESSON_DURATION_MINUTES=60
MIN_LESSON_DURATION_MINUTES=5

# Gamification Settings
POINTS_PER_CORRECT_SENTENCE=10
POINTS_PER_STREAK_DAY=25
ACHIEVEMENT_UNLOCK_THRESHOLD=100

# Backup and Maintenance
AUTO_BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
MAINTENANCE_WINDOW_START="02:00"
MAINTENANCE_WINDOW_END="04:00"